{
  "version": 2,
  "builds": [
    {
      "src": "./packages/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd ../.. && npm install && npm run build:client"
      }
    },
    {
      "src": "./packages/server/src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/packages/server/src/index.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/packages/server/src/index.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/packages/server/src/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/packages/client/dist/$1"
    }
  ]
}
